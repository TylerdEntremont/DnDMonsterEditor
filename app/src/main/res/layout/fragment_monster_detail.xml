<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MonsterDetailFragment">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/holder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0"
        android:textSize="25sp"
        />

    <TextView
        android:id="@+id/AC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AC"
        app:layout_constraintTop_toTopOf="@id/ACET"
        app:layout_constraintBottom_toBottomOf="@id/ACET"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/HP"
        android:labelFor="@+id/ACET"
        />

    <EditText
        android:id="@+id/ACET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/AC"
        android:inputType="number"
        android:autofillHints=""
        />

    <TextView
        android:id="@+id/HP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/HP"
        app:layout_constraintTop_toTopOf="@id/HPET"
        app:layout_constraintBottom_toBottomOf="@id/HPET"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/AC"
        />

    <EditText
        android:id="@+id/HPET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/HP"
        android:inputType="number"
        android:autofillHints=""
        />

    <TextView
        android:id="@+id/saves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/saves"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toTopOf="@id/con"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/dex"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/dex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dex"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/con"
        app:layout_constraintLeft_toRightOf="@id/str"
        />

    <TextView
        android:id="@+id/con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/con"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/intel"
        app:layout_constraintLeft_toRightOf="@id/dex"
        />

    <TextView
        android:id="@+id/intel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intel"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/wisET"
        app:layout_constraintLeft_toRightOf="@id/con"
        />

    <TextView
        android:id="@+id/wis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wis"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/cha"
        app:layout_constraintLeft_toRightOf="@id/intel"
        />

    <TextView
        android:id="@+id/cha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cha"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/AC"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/wis"
        />


    <EditText
        android:id="@+id/strET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/str"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/dex"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="numberSigned"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/dexET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/dex"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/con"
        app:layout_constraintLeft_toRightOf="@id/str"
        android:inputType="numberSigned"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/conET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/con"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/intel"
        app:layout_constraintLeft_toRightOf="@id/dex"
        android:inputType="numberSigned"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/intelET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/intel"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/wis"
        app:layout_constraintLeft_toRightOf="@id/con"
        android:inputType="numberSigned"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/wisET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/wis"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toLeftOf="@id/cha"
        app:layout_constraintLeft_toRightOf="@id/intel"
        android:inputType="numberSigned"
        android:autofillHints=""
        />

    <EditText
        android:id="@+id/chaET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/cha"
        app:layout_constraintBottom_toBottomOf="@id/upperGuideLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/wis"
        android:inputType="numberSigned"
        android:autofillHints=""
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upperGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/midGuideLine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/abilityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0"
        android:text="@string/abilities"
        app:layout_constraintTop_toTopOf="@+id/upperGuideLine"
        app:layout_constraintBottom_toBottomOf="@+id/halfUpGuideline"
        app:layout_constraintRight_toRightOf="@+id/midGuideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/abilityRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/abilityTV"
        app:layout_constraintBottom_toBottomOf="@+id/halfUpGuideline"
        app:layout_constraintRight_toRightOf="@+id/midGuideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/legendaryActionsTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/legendary_actions"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/halfUpGuideline"
        app:layout_constraintBottom_toTopOf="@+id/legendaryActionsRV"
        app:layout_constraintRight_toRightOf="@+id/midGuideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/legendaryActionsRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/legendaryActionsTV"
        app:layout_constraintBottom_toBottomOf="@+id/lowerGuideLine"
        app:layout_constraintRight_toRightOf="@+id/midGuideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        />


    <TextView
        android:id="@+id/attacksTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actions"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="@+id/upperGuideLine"
        app:layout_constraintBottom_toBottomOf="@+id/lowerGuideLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/midGuideLine1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/attacksRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/attacksTV"
        app:layout_constraintBottom_toBottomOf="@+id/lowerGuideLine"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/midGuideLine1"
        android:layout_marginHorizontal="10dp"
        />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lowerGuideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/halfUpGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />


    <TextView
        android:id="@+id/CR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cr"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/CRET"
        app:layout_constraintBottom_toBottomOf="@+id/CRET"
        app:layout_constraintRight_toLeftOf="@id/midGuideLine1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/CRET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholderNum"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/saveButton"
        app:layout_constraintLeft_toRightOf="@id/midGuideLine1"
        android:inputType="number"
        android:textSize="30sp"
        android:autofillHints=""
        />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="1"
        android:text="@string/delete"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/saveName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"/>



    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="1"
        android:text="@string/update"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        />

    <EditText
        android:id="@+id/saveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_name_to_save"
        app:layout_constraintTop_toBottomOf="@id/lowerGuideLine"
        app:layout_constraintBottom_toTopOf="@+id/CRET"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="text"
        android:autofillHints=""
        />




</androidx.constraintlayout.widget.ConstraintLayout>