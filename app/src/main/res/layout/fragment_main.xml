<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">


    <Button
        android:id="@+id/buttonFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_list_from_srd"
        app:layout_constraintBottom_toTopOf="@+id/buttonSI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modified_monsters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFL" />


</androidx.constraintlayout.widget.ConstraintLayout>